<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title"
	xmlns:p="tapestry:parameter">

	<div class="form-group">
    	<div class="col-md-offset-5 col-md-6 col-md-6">
       		<button type="submit" class="btn btn-default" t:type="PageLink"
								t:page="administration/group/register">${message:createANewGroup}</button>
       	</div>
    </div>
    
    <br /><br />
    
    <!-- Grid de Group con elementos para modificar y eliminar -->
    
    <div class="eg">
        <t:grid source="groups" row="group" add="manageGroup" rowsPerPage="6" pagerPosition="top" exclude="groupId">
        <p:groupNameCell>
                <t:pagelink page="group/view" context="group.groupId"><span class="devgroup">${group.groupName}</span></t:pagelink>
            </p:groupNameCell>
        <p:manageGroupCell>
        <button type="submit" class="btn btn-danger" t:type="PageLink"
						t:page="administration/group/delete" t:context="group.groupId">${message:delete}</button>
			<span style="display:inline-block; width: 10px;"></span>
			<button type="submit" class="btn btn-primary" t:type="PageLink"
						t:page="administration/group/modify" t:context="group.groupId">${message:modify}</button>
        </p:manageGroupCell>
        <p:empty>
        	${message:noGroup}
        </p:empty>
        </t:grid>
    </div>
    
</html>