<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title">
	
	<form t:type="Form" class="form-horizontal" t:id="registrationForm">
	
	   <t:errors/>
	   
	   <div class="form-group">        
	        <t:label for="userStoryName" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="userStoryName" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>
	   
	   <div class="form-group">        
	        <t:label for="userStoryDescription" class="col-md-offset-3 col-md-2"/>
	        <div class="col-md-3">
	            <input t:id="userStoryDescription" t:type="TextField"
				       t:validate="required" maxlength="30" />
	        </div>
	   </div>	    

	   <div class="form-group">
	    	<div class="col-md-offset-5 col-md-1">
        		<button type="submit" class="btn btn-primary" t:context="userStoryDetails.userStoryId">${message:submit}</button>
        	</div>
       </div>
	    
	</form>
</html>