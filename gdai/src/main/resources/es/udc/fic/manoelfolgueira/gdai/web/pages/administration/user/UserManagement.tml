<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title"
	xmlns:p="tapestry:parameter">

	<div class="form-group">
    	<div class="col-md-offset-5 col-md-6 col-md-6">
       		<button type="submit" class="btn btn-default" t:type="PageLink"
								t:page="administration/user/userregister">${message:createANewUser}</button>
       	</div>
    </div>
    
    <br /><br />
    
    <!-- Grid de Group con elementos para modificar y eliminar -->
    
    <div class="eg">
        <t:grid source="users" row="user" add="user,manageUser" rowsPerPage="3" pagerPosition="top"
        		include="userId" exclude="userId">
	        <p:userCell>
	        	<div class="w3-card-4">
	        	
	        		<img style="float: left;" src="${user.getAvatarUrl()}" class="avatar"/>

					<header class="w3-container w3-light-grey">
					  <h3><t:pagelink page="administration/user/viewuser" context="user.userId">${user.loginName}</t:pagelink></h3>
					</header>
					
					<div class="w3-container">
					  <p>${user.getFirstName()} ${user.getLastName()}</p>
					  <p>${user.getGroup().getGroupName()}</p>
					</div>
										
			    </div>	        
	        </p:userCell>       
	        <p:manageUserCell>
	        <button type="submit" class="btn btn-danger" t:type="PageLink"
							t:page="administration/user/deleteuser" t:context="user.userId">${message:delete}</button>
				<span style="display:inline-block; width: 10px;"></span>
				<button type="submit" class="btn btn-primary" t:type="PageLink"
							t:page="administration/user/modifyuser" t:context="user.userId">${message:modify}</button>
	        </p:manageUserCell>
	        <p:empty>
	        	${message:noUser}
	        </p:empty>
        </t:grid>
    </div>
    
</html>