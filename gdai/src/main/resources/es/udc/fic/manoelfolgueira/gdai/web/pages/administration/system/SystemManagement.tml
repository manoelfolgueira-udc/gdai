<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title"
	xmlns:p="tapestry:parameter">

	<div class="form-group">
    	<div class="col-md-offset-5 col-md-6 col-md-6">
       		<button type="submit" class="btn btn-default" t:type="PageLink"
								t:page="administration/system/register">${message:createANewSystem}</button>
       	</div>
    </div>
    
    <br /><br />
    
    <!-- Grid de System con elementos para modificar y eliminar -->
    
    <div class="eg">
        <t:grid source="systems" value="system" row="system" add="group,systemManagement" rowsPerPage="6" pagerPosition="top">
        <p:systemNameCell>
                <t:pagelink page="system/view" context="system.systemId">${system.systemName}</t:pagelink>
            </p:systemNameCell>
        <p:groupCell>
        	<t:pagelink page="group/view" context="system.group.groupId">${system.group.groupName}</t:pagelink>
            </p:groupCell>
        <p:systemManagementCell>
        <button type="submit" class="btn btn-danger" t:type="PageLink"
						t:page="administration/system/delete" t:context="system.systemId">${message:delete}</button>
			<span style="display:inline-block; width: 10px;"></span>
			<button type="submit" class="btn btn-primary" t:type="PageLink"
						t:page="administration/system/modify" t:context="system.systemId">${message:modify}</button>
        </p:systemManagementCell>
        <p:empty>
        	${message:noSystem}
        </p:empty>
        </t:grid>
    </div>
    
</html>