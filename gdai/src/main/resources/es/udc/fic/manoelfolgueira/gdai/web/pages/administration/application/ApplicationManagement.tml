<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title"
	xmlns:p="tapestry:parameter">

	<div class="form-group">
    	<div class="col-md-offset-5 col-md-6 col-md-6">
       		<button type="submit" class="btn btn-default" t:type="PageLink"
								t:page="administration/application/applicationregister">${message:createANewApplication}</button>
       	</div>
    </div>
    
    <br /><br />
    
    <!-- Grid de Application con elementos para modificar y eliminar -->
    
    <div class="eg">
        <t:grid source="applications" value="application" row="application" add="system,applicationManagement" rowsPerPage="6" pagerPosition="top">
        <p:applicationNameCell>
                <t:pagelink page="application/applicationview" context="application.applicationId">${application.applicationName}</t:pagelink>
            </p:applicationNameCell>
        <p:systemCell>
        	<t:pagelink page="system/systemview" context="application.system.systemId">${application.system.systemName}</t:pagelink>
            </p:systemCell>
        <p:applicationManagementCell>
        <button type="submit" class="btn btn-danger" t:type="PageLink"
						t:page="administration/application/applicationdelete" t:context="application.applicationId">${message:delete}</button>
			<span style="display:inline-block; width: 10px;"></span>
			<button type="submit" class="btn btn-primary" t:type="PageLink"
						t:page="administration/application/applicationmodify" t:context="application.applicationId">${message:modify}</button>
        </p:applicationManagementCell>
        <p:empty>
        	${message:noApplication}
        </p:empty>
        </t:grid>
    </div>
    
</html>